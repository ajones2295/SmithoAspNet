    <footer class="border-top border-bottom footer text-muted bg-light">
        <ul class="navbar-nav list-group-horizontal">
            <li class="nav-item me-4 footstuff">
                <a class="foot-link" asp-area="Visitor" asp-controller="Company" asp-action="Index">About</a>
            </li>
            <li class="nav-item me-4">
                <a class="foot-link" asp-area="Visitor" asp-controller="Company" asp-action="Privacy">Privacy</a>
