                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 flex-sm-row-reverse">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Visitor" asp-controller="Company" asp-action="Index">Company</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Visitor" asp-controller="Technology" asp-action="Index">Technology</a>
                        </li>

