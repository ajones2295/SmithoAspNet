@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.11.2/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
</head>
<body class="mainBody">
    <header>
        <nav class="bars navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow ">
            <div class="container-fluid">
                <b><a class="logo" asp-area="Visitor" asp-controller="Home" asp-action="Index"><img src="/images/smithocon4.png" alt="smitho icon">Smithovision</a></b>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 flex-sm-row-reverse">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Visitor" asp-controller="Company" asp-action="Index">Company</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Visitor" asp-controller="Technology" asp-action="Index">Technology</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Visitor" asp-controller="Company" asp-action="Community">Community</a>
                        </li>

                        @*<li class="nav-item">
                        <a class="nav-link" asp-area="Visitor" asp-controller="Industry" asp-action="Index">Industries</a>
                        </li>*@

                        @*<li class="nav-item">
                        <a class="nav-link" asp-area="Visitor" asp-controller="Feature" asp-action="Index">Featured</a>
                        </li>*@

                        @*<li class="nav-item">
                        <a class="nav-link" asp-area="Visitor" asp-controller="Products" asp-action="Index">Products</a>
                        </li>*@

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Visitor" asp-controller="Service" asp-action="Index">Services</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="introBoard" class="carousel slide tron-marquee " data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <h1>The best day to build your vision was one year ago. The second best is today!</h1>
                @*<img src="~/images/sadsad.png" width="100%" height="400" alt="intro1">*@
            </div>
            <div class="carousel-item">
                <h1>Unlock infinite opportunites with the latest technology right at your fingertips</h1>
                @*<img src="~/images/sadsad.png" width="100%" height="400" alt="intro2">*@
            </div>
            <div class="carousel-item">
                <h1>Scale up operations to keep pace with an ever-changing digital enviornment</h1>
                @*<img src="~/images/sadsad.png" width="100%" height="400" alt="intro3">*@
            </div>
            @*<div class="carousel-item">
            <h1></h1>
            <imgk src="~/images/sadsad.png" width="100%" height="300" alt="intro4">
            </div>*@
        </div>
    </div>

    <div class="row header-row">
        <div class="col-md-6">
            <div class="header__title">
                <h1 class="header-title">
                    Software
                    <!-- Green highlight effect -->
                    <span class="highlight">Solutions</span>
                    Centered <br /> Around
                    <span class="highlight">Your</span>
                    Needs
                </h1>
            </div>
            <div class="break-line">
                Whether you have a vision for a new digital product or just need a more efficient way of
                operating, our platform help brings your idea to life

                <a class="mainButton" asp-area="Visitor" asp-controller="Service" asp-action="Web">Get Started</a>

                Want to talk to an expert? <a asp-area="Visitor" asp-controller="Company" asp-action="Sales">Contact sales.</a>
            </div>
        </div>
        <div class="col-md-6">
            <img class="header-image" src="~/images/web-construction.png" alt="intro4">
        </div>
    </div>



    <div class="banner-2">
        <h2>
            Build from scratch, or not...
        </h2>
        <h3>Choose from an extensive catalog of reusable requirements and modules of code </h3>
        <h3>Build a custom application from the ground up tailored to your needs</h3>
    </div>












    <div class="banner-3">
        <div class="row advantages">
            @*<center><img src="/images/web-construction.png" /></center>*@
            <div class="col-md-6 ">
                <h4>Quick Start</h4>
                <p>Streamline the development process by utilizing our growing library of reusable requirements & modules of code</p>
            </div>

            <div class="col-md-6 ">
                <h4>Clear and </h4>
                <p>Professional grade applications </p>
            </div>

        </div>
    </div>


